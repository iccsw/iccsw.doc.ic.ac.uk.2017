doctype
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      title
        block title
          = locals.name
      link(rel='stylesheet', href='/2015/css/bootstrap.css')
      link(rel='stylesheet', href='/2015/css/ss-social.css')
      link(rel='stylesheet', href='/2015/css/app.css')
      <!--[if lt IE 9]>
      script(src='/js/html5shiv.js')
      <![endif]-->
      include analytics
      +analytics('UA-22691589-4')
  body(class=bodyclass)
    nav.navbar.navbar-fixed-top.navbar-inverse(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/2015/', title=locals.name, rel='home')
            img(alt=locals.name, height=25, src='/2015/img/logo.png')
        .collapse.navbar-collapse.nav-collapse
          include menu
          ul.nav.navbar-nav
            +menu('Call for Papers', '/2015/cfp.html')
            +menu('Location', '/2015/location.html')
            +menu('Organisation', '/2015/organisation.html')
            +menu('FAQ', '/2015/faq.html')
    .container
      header.subhead
        a(href=locals.url)
          img(alt=locals.name, src='/2015/img/queens-tower.jpg')
        block subhead
      section.content
        block content
    footer.footer
      .container
        block footer
          .pull-right
            ul.services.list-unstyled
              // FIXME: Decide what do with the accounts
                  li.twitter
                    a.ss-icon.ss-social-circle.ss-twitter(href='https://twitter.com/iccsw2015')
                  li.facebook
                    a.ss-icon.ss-social-circle.ss-facebook(href='https://facebook.com/iccsw2015')
              li.octocat
                a.ss-icon.ss-social-circle.ss-octocat(href='https://github.com/iccsw')
              //li.linkedin
              //  a.ss-icon.ss-social-circle.ss-linkedin(href='http://www.linkedin.com/groups/ICCSW-14-5128593')
          p.credit
            Copyright &copy; 2015 
            a(href='http://acm.doc.ic.ac.uk/') Imperial College London ACM Student Chapter
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')
    script(src='/2015/js/bootstrap.js')
    script(src='/2015/js/app.js')

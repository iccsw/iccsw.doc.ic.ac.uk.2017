doctype
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      title
        block title
          = locals.name
      link(rel='stylesheet', href='/2017/css/bootstrap.css')
      link(rel='stylesheet', href='/2017/css/ss-social.css')
      link(rel='stylesheet', href='/2017/css/app.css')
      link(rel='stylesheet', href='/2017/css/ICCSW17.css')
      link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Khula:400,600,700|Raleway:300')
      <!--[if lt IE 9]>
      script(src='/js/html5shiv.js')
      <![endif]-->
      include analytics
      +analytics('UA-22691589-4')
  body(class=bodyclass)
    nav.navbar.navbar-fixed-top.navbar-inverse(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/2017/', title=locals.name, rel='home', class="iccsw-brand") #[div#[span ICCSW]#[span(class="iccsw-brand-num") 17]]
        .collapse.navbar-collapse.nav-collapse
          include menu
          ul.nav.navbar-nav
            +menu('Call for Papers', '/2017/cfp.html')
            +menu('FAQ', '/2017/faq.html')
            +menu('Keynotes', '/2017/keynotes.html')
            +menu('Location', '/2017/location.html')
            +menu('Programme', '/2017/programme.html')
            +menu('Organisation', '/2017/organisation.html')
            +menu('Registration', '/2017/registration.html')
    .container
      header.subhead
        a(href=locals.url)
          img(alt=locals.name, src='/2017/img/queens-tower.jpg')
        block subhead
      section.content
        block content
        <div align="right"><span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
        <span class="iccsw-name">ICCSW</span><span class="iccsw-num">17</span> Steering Committee</div>
    footer.footer
      .container
        block footer
          .pull-right
            ul.services.list-unstyled
              // FIXME: Decide what do with the accounts
              li.twitter
                    a.ss-icon.ss-social-circle.ss-twitter(href='https://twitter.com/iccsw2017')
              li.facebook
                a.ss-icon.ss-social-circle.ss-facebook(href='https://www.facebook.com/groups/iccsw/')
              li.octocat
                a.ss-icon.ss-social-circle.ss-octocat(href='https://github.com/iccsw')
              //li.linkedin
              //  a.ss-icon.ss-social-circle.ss-linkedin(href='http://www.linkedin.com/groups/ICCSW-14-5128593')
          p.credit
            Copyright &copy; 2017
            a(href='http://acm.doc.ic.ac.uk/')  Imperial College London ACM Student Chapter
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')
    script(src='/2017/js/bootstrap.js')
    script(src='/2017/js/app.js')
